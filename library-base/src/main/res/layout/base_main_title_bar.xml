<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <ImageView
        android:id="@+id/title_calendar"
        android:layout_width="38.5dp"
        android:layout_height="38.5dp"
        android:padding="10dp"
        android:src="@drawable/ic_calendar_black_19dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/title_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/title_iv_search"
        app:layout_constraintStart_toEndOf="@id/title_calendar"
        app:layout_constraintTop_toTopOf="parent"
        app:tl_iconVisible="false"
        app:tl_indicator_color="@color/colorTextPrimary"
        app:tl_indicator_height="3dp"
        app:tl_indicator_margin_bottom="3dp"
        app:tl_indicator_width="10dp"
        app:tl_tab_width="66dp"
        app:tl_textBold="BOTH"
        app:tl_textSelectColor="@color/colorTextPrimary"
        app:tl_textUnselectColor="@color/colorTextSecondary"
        app:tl_textsize="12sp" />

    <ImageView
        android:id="@+id/title_iv_search"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:padding="13dp"
        android:src="@drawable/ic_search_black_17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>