<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/item_special_column_item_iv"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/item_special_column_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_special_column_item_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_special_column_item_iv"
        app:layout_constraintStart_toStartOf="@+id/item_special_column_item_iv"
        app:layout_constraintTop_toTopOf="@+id/item_special_column_item_iv"
        tools:text="#手机里的小秘密" />
</androidx.constraintlayout.widget.ConstraintLayout>