<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="14dp">

    <ImageView
        android:id="@+id/item_video_card_iv_picture"
        android:layout_width="173dp"
        android:layout_height="100dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_video_card_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/item_video_card_tv_time"
        style="@style/VideoDurationTextView"
        app:layout_constraintBottom_toBottomOf="@id/item_video_card_iv_picture"
        app:layout_constraintEnd_toEndOf="@id/item_video_card_iv_picture"
        tools:text="01:36" />

    <TextView
        android:id="@+id/item_video_card_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_video_card_iv_picture"
        app:layout_constraintTop_toTopOf="@id/item_video_card_iv_picture"
        tools:text="当病毒把人类隔离在家，大自然开始了狂欢" />

    <TextView
        android:id="@+id/item_video_card_tv_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_video_card_iv_picture"
        app:layout_constraintEnd_toEndOf="@id/item_video_card_tv_title"
        app:layout_constraintStart_toStartOf="@id/item_video_card_tv_title"
        tools:text="#动画 / 开眼精选" />

    <ImageView
        android:id="@+id/item_video_card_iv_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@id/item_video_card_iv_picture"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_share_gray_20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>