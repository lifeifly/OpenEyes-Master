<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:paddingHorizontal="14dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/item_header_tv_title7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="开眼专栏" />


    <TextView
        android:id="@+id/item_header_tv_attention7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_header_iv_right7"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="查看全部" />

    <ImageView
        android:id="@+id/item_header_iv_right7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_into_blue_24dp"
        app:layout_constraintBottom_toBottomOf="@id/item_header_tv_attention7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_header_tv_attention7" />
</androidx.constraintlayout.widget.ConstraintLayout>