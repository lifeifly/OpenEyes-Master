<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="14dp">

    <TextView
        android:id="@+id/item_ugc_selected_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/colorTextPrimaryDark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_ugc_selected_iv_cover_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="社区精选" />

    <TextView
        android:id="@+id/item_ugc_selected_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_ugc_selected_tv_title"
        app:layout_constraintEnd_toStartOf="@id/item_ugc_selected_iv_right"
        app:layout_constraintTop_toTopOf="@id/item_ugc_selected_tv_title"
        tools:text="查看全部" />

    <ImageView
        android:id="@+id/item_ugc_selected_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_into_blue_24dp"
        app:layout_constraintBottom_toBottomOf="@id/item_ugc_selected_tv_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_ugc_selected_tv_right" />


    <ImageView
        android:id="@+id/item_ugc_selected_iv_cover_left"
        android:layout_width="0dp"
        android:layout_height="183dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/item_ugc_selected_iv_cover_right_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_ugc_selected_tv_title"
        tools:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/item_ugc_selected_iv_layers_left"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/ic_layers_white_15dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/item_ugc_selected_iv_cover_left"
        app:layout_constraintTop_toTopOf="@id/item_ugc_selected_iv_cover_left"
        tools:visibility="visible" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_ugc_selected_iv_avatar_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_ugc_selected_iv_cover_left"
        app:layout_constraintEnd_toStartOf="@id/item_ugc_selected_tv_name_left"
        tools:src="@drawable/ic_avatar_gray_76dp" />


    <TextView
        android:id="@+id/item_ugc_selected_tv_name_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/item_ugc_selected_iv_avatar_left"
        app:layout_constraintEnd_toEndOf="@id/item_ugc_selected_iv_cover_left"
        app:layout_constraintTop_toTopOf="@id/item_ugc_selected_iv_avatar_left"
        tools:text="vipyinzhiwei" />

    <ImageView
        android:id="@+id/item_ugc_selected_iv_cover_right_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/item_ugc_selected_iv_cover_right_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_ugc_selected_iv_cover_left"
        app:layout_constraintTop_toBottomOf="@id/item_ugc_selected_tv_title"
        tools:src="@drawable/bg_splash_background" />

    <ImageView
        android:id="@+id/item_ugc_selected_iv_layers_right_top"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/ic_layers_white_15dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/item_ugc_selected_iv_cover_right_top"
        app:layout_constraintTop_toTopOf="@id/item_ugc_selected_iv_cover_right_top"
        tools:visibility="visible" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_ugc_selected_iv_avatar_right_top"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_ugc_selected_iv_cover_right_top"
        app:layout_constraintEnd_toStartOf="@id/item_ugc_selected_tv_name_right_top"
        tools:src="@drawable/ic_avatar_gray_76dp" />


    <TextView
        android:id="@+id/item_ugc_selected_tv_name_right_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/item_ugc_selected_iv_avatar_right_top"
        app:layout_constraintEnd_toEndOf="@id/item_ugc_selected_iv_cover_right_top"
        app:layout_constraintTop_toTopOf="@id/item_ugc_selected_iv_avatar_right_top"
        tools:text="vipyinzhiwei" />

    <ImageView
        android:id="@+id/item_ugc_selected_iv_cover_right_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_ugc_selected_iv_cover_left"
        app:layout_constraintTop_toBottomOf="@id/item_ugc_selected_iv_cover_right_top"
        tools:src="@drawable/bg_splash_background" />

    <ImageView
        android:id="@+id/item_ugc_selected_iv_layers_right_bottom"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/ic_layers_white_15dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/item_ugc_selected_iv_cover_right_bottom"
        app:layout_constraintTop_toTopOf="@id/item_ugc_selected_iv_cover_right_bottom"
        tools:visibility="visible" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_ugc_selected_iv_avatar_right_bottom"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_ugc_selected_iv_cover_right_bottom"
        app:layout_constraintEnd_toStartOf="@id/item_ugc_selected_tv_name_right_bottom"
        tools:src="@drawable/ic_avatar_gray_76dp" />


    <TextView
        android:id="@+id/item_ugc_selected_tv_name_right_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/item_ugc_selected_iv_avatar_right_bottom"
        app:layout_constraintEnd_toEndOf="@id/item_ugc_selected_iv_cover_right_bottom"
        app:layout_constraintTop_toTopOf="@id/item_ugc_selected_iv_avatar_right_bottom"
        tools:text="vipyinzhiwei" />
</androidx.constraintlayout.widget.ConstraintLayout>