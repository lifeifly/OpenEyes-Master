<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="14dp">

    <ImageView
        android:id="@+id/item_info_card_cover"
        android:layout_width="0dp"
        android:layout_height="183dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/blackAlpha50" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_info_card_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_information_card_radius_gray_4dp_bg"
        tools:listitem="@layout/item_info_card_type_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_info_card_cover"/>
</androidx.constraintlayout.widget.ConstraintLayout>