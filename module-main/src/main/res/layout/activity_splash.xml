<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:id="@+id/splash_iv_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_splash"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/splash_iv_slogan"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_marginTop="230dp"
        android:padding="8dp"
        android:src="@drawable/ic_logo_slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.library_common.views.CommonCustomTextView
        android:id="@+id/tv_splash_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_slogan"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:typeface="lobster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/tv_splash_chineae"/>

    <TextView
        android:id="@+id/tv_splash_chineae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:textSize="13sp"
        android:text="@string/splash_description"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>